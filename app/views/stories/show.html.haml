= render 'story', story: @story

- content_for :sidebar do
  - if current_user == @story.user
    %h3= t :actions_header
    %ul.nav.nav-pills.nav-stacked
      %li
        = button_to t(:edit_button), edit_story_path(@story), method: :get, class: ['btn', 'btn-default']
      %li
        = button_to t(:delete_button), story_path(@story), method: :delete, class: ['btn', 'btn-danger']